
process {
  cpus = 16
  memory = '4G'
  errorStrategy = { task.attempt <= 2 ? "retry" : "finish" }
  maxRetries = 1
}


params {

    /// Default parameter values

    params_description =  "lib/params/parameters.settings.json"

    entrypoint=1
    exitpoint=7

    help=false
    version=false
    input_dir=""
    elution_pattern=""
    features_entrypoint2=""
    feature_matrix_entrypoint3=""
    feature_matrix_labeled_entrypoint4=""
    scored_interactions_entrypoint5=""
    goldstandard_complexes=""
    generate_labels = true

    merge_threshold=0.6
    complex_size_threshold=30
    negatives_from_observed=true
    negative_limit=20000

    postrain=''
    negtrain=''
    postest=''
    negtest=''    
    classifiers_to_scan=''
    generations=10
    population=20
    n_jobs=20

    walktrap_steps=3
    annotation_file=''
    elution_file=''

    plot_pr='False'
    fdr_cutoff=0.2
    output_dir='output_dir'
}

// Copied from MLST
params.output_dir = ".default_hidden"
params.pipeline_info = "${params.output_dir}/pipeline_info"
timeline {
  enabled = true
  file = "${params.pipeline_info}/execution_timeline.html"
}
report {
  enabled = true
  file = "${params.pipeline_info}/execution_report.html"
}
dag {
  enabled = true
  file = "${params.pipeline_info}/pipeline_dag.pdf"
}

